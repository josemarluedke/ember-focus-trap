{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "site"
  ],
  "scripts": {
    "prepare": "pnpm --filter ember-focus-trap prepare",
    "start": "npm-run-all --parallel start:*",
    "start:addon": "pnpm --filter ember-focus-trap start",
    "start:test-app": "pnpm --filter test-app start",
    "lint:js": "eslint . --ext .js,.ts",
    "test": "pnpm --filter test-app run test"
  },
  "devDependencies": {
    "@underline/eslint-config-ember-typescript": "^0.16.0",
    "@underline/eslint-config-node": "^0.16.0",
    "@underline/eslint-config-typescript": "^0.16.0",
    "eslint": "^9.14.0",
    "lerna": "^8.1.9",
    "npm-run-all": "4.1.5",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "eslint-plugin-qunit": "^7.3.4"
  },
  "resolutions": {
    "@embroider/macros": "^1.16.0",
    "ember-basic-dropdown": "^8.3.0",
    "ember-power-select": "^8.3.1",
    "@frontile/forms": "^0.17.0-alpha.21",
    "@frontile/overlays": "^0.17.0-alpha.21",
    "@frontile/theme": "^0.17.0-alpha.21"
  },
  "volta": {
    "node": "22.11.0",
    "pnpm": "9.13.0"
  }
}
